<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Book</title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/page.css" />
    <link rel="stylesheet" href="/new-book.css" />
  </head>

  <body>
    <%- include("partials/header") %>

    <div class="add-book-wrapper">
      <div class="add-book-card">
        <h2 class="page-title">Add New Book</h2>

        <form action="/books/new" method="POST">
          <div class="form-grid">
            <div class="image-column">
              <div id="imagePreview" class="image-preview">
                <p>Cover Preview</p>
              </div>

              <label>Cover Image URL *</label>
              <input
                type="url"
                name="imageUrl"
                id="imageUrl"
                placeholder="Paste image URL..."
                oninput="previewImage()"
                required
              />
            </div>

            <div class="fields-column">
              <div class="two">
                <div>
                  <label>Title *</label>
                  <input type="text" name="title" required />
                </div>

                <div>
                  <label>Author *</label>
                  <input type="text" name="author" required />
                </div>
              </div>

              <div class="two">
                <div>
                  <label>Genre *</label>
                  <input type="text" name="genre" required />
                </div>

                <div>
                  <label>Price *</label>
                  <input type="number" step="0.01" name="price" required />
                </div>
              </div>

              <div class="two">
                <div>
                  <label>Publication Year *</label>
                  <input type="number" name="yearPublished" required />
                </div>

                <div>
                  <label>Pages *</label>
                  <input type="number" name="pages" required />
                </div>
              </div>

              <label>ISBN</label>
              <input type="text" name="isbn" />

              <label>Description *</label>
              <textarea name="description" required></textarea>

              <div class="actions">
                <a href="/books" class="cancel-btn">Cancel</a>
                <button class="add-btn">Add Book</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

